<?php

namespace T1;

use Illuminate\Database\Eloquent\Model;

/**
 * Class ServiceOffer
 * @author Gerardo Adrián Gómez Ruiz
 * @version 1.0
 */
class ServiceOffer extends Model
{
    /**
	 * @var string
	 */
    protected $table = 'serviceoffer';

    /**
     * @var bool
     */
    public $timestamps = false;

    /**
     * @return \Illuminate\Database\Eloquent\Relations\BelongsTo
     */
    public function shippingRequest()
    {
    	return $this->belongsTo('T1\ShippingRequest', 'shippingrequestid');
    }

    /**
     * @return \Illuminate\Database\Eloquent\Relations\BelongsTo
     */
    public function shipper()
    {
        return $this->belongsTo('T1\Shipper', 'shipperid');
    }

    /**
     * @return \Illuminate\Database\Eloquent\Relations\HasOne
     */
    public function currency()
    {
        return $this->belongsTo('T1\Currency', 'currencyid');
    }

    /**
     * @return \Illuminate\Database\Eloquent\Relations\BelongsTo
     */
    public function paymentMethod()
    {
        return $this->belongsTo('T1\PaymentMethod', 'paymentmethodid');
    }

    /**
     * @return \Illuminate\Database\Eloquent\Relations\HasOne
     */
    public function shipment()
    {
        return $this->hasOne('T1\Shipment', 'acceptedserviceofferid');
    }
}